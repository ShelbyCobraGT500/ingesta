file = {:C$\backslash$:/Users/felipe/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Song et al. - 2015 - The Rsm regulon of plant growth-promoting Pseudomonas fluorescens SS101 Role of small RNAs in regulation of lipopep.pdf:pdf},
issn = {17517915},
journal = {Microbial Biotechnology},
number = {2},
pages = {296--310},
pmid = {25488342},
title = {{The Rsm regulon of plant growth-promoting Pseudomonas fluorescens SS101: Role of small RNAs in regulation of lipopeptide biosynthesis}},
volume = {8},
year = {2015}
}
