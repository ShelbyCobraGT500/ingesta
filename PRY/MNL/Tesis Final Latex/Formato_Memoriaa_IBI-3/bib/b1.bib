file = {:C$\backslash$:/Users/felipe/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Mass{\'{e}}, Gottesman - 2002 - A small RNA regulates the expression of genes involved in iron metabolism in Escherichia coli.pdf:pdf},
