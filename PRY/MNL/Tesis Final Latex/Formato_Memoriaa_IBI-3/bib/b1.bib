issn = {1547-6286},
journal = {RNA biology},
keywords = {Animals,DNA Transposable Elements,RNA Processing: Post-Transcriptional,RNA Stability,RNA: Untranslated,Ribonucleases,Transcription: Genetic},
number = {4},
pages = {230--243},
pmid = {18981732},
title = {{Regulating the regulators: How ribonucleases dictate the rules in the control of small non-coding RNAs}},
url = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed{\&}cmd=Retrieve{\&}dopt=AbstractPlus{\&}list{\_}uids=18981732{\%}5Cnhttp://www.landesbioscience.com/journals/rnabiology/article/6915},
volume = {5},
